{
    "name": "Docker and Azure CLI",
    "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu",
    "features": {
        "docker-in-docker": {
            "version": "latest"
        },
        "azure-cli": "latest",
        "ghcr.io/devcontainers/features/dotnet:1": {
            "version": "9.0"
        },
        "ghcr.io/devcontainers/features/dotnet:1": {
            "version": "8.0"
        }
    },
    "postCreateCommand": "az --version && docker --version",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-vscode.azurecli"
            ]
        }
    }
}
